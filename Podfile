  use_modular_headers!
  
  # Loader
  pod 'SVProgressHUD'
  
  # Server Communication
  pod 'Moya'
  
  # Data Persistance
  pod 'SwiftyUserDefaults'
  
  #Keyboard
  pod 'IQKeyboardManagerSwift'
  
  # Image Setup
  pod 'Kingfisher', '~> 4.10'
  
  # For database
  pod 'RealmSwift'
  
  # For animation
  pod 'Hero'
  
end
